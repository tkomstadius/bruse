<h1>Welcome</h1>

<% current_user.identities.each do |id| %>
      <%= id.name %>
<% end %>


<h1>Listing Files</h1>



<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>File type</th>
      <th>Meta</th>
      <th>Tag</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bruse_files.each do |file| %>
      <tr>
        <td><%= file.name %></td>
        <td><%= file.filetype %></td>
        <td><%= file.meta %></td>
        <td><% file.tags.each do |t| %>
         <%= link_to t.name, t %>
          <%= link_to 'Delete tag', destroy_tag_path(file, t),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>

        <% end %></td>
        <td><%= link_to 'Add tag', new_tag_path(file) %></td>

      </tr>
    <% end %>


  </tbody>
</table>


<br/>
<ul>
  <% current_user.identities.each do |id| %>
    <li>
      <%= link_to 'Add more files', new_file_path(identity_id: id.id) %>
    </li>
  <% end %>

  <li><%= link_to 'Search File', search_path %></li>
</ul>
