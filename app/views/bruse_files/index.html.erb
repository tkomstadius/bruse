<p id="notice"><%= notice %></p>

<h1>Listing Files</h1>

<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>File type</th>
      <th>Meta</th>
      <th>Tag</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bruse_files.each do |file| %>
      <tr>
        <td><%= file.name %></td>
        <td><%= file.filetype %></td>
        <td><%= file.meta %></td>
        <% file.tags.each do |t| %>
          <td><%= t.name %> </td>
        <% end %>
      </tr>
    <% end %>




  </tbody>
</table>

<br>

<%= link_to 'New File', new_bruse_file_path %>