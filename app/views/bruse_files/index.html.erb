<h1>Listing Files</h1>




<%= form_tag(tags_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Articles" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn" type="submit"><i class="icon-search"></i></button>
    </div>
  <% end %>
  <%= yield %>





<table>
  <thead>
    <tr>
      <th>File name</th>
      <th>File type</th>
      <th>Meta</th>
      <th>Tag</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  

  <tbody>
    <% @bruse_files.each do |file| %>  
      <tr> 
        <td><%= file.name %></td>
        <td><%= file.filetype %></td>
        <td><%= file.meta %></td>
        <% file.tags.each do |t| %>
          <td><%= link_to t.name, t %> </td>
         <td> <%= link_to 'Delete tag', destroy_tag_path(file, t), 
                  method: :delete, 
                  data: { confirm: 'Are you sure?' } %>
        </td>
        <% end %>
        <td><%= link_to 'Destroy', file, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add tag', new_tag_path(file) %></td>

      </tr>
    <% end %>




  </tbody>
</table>


<br>

<% current_user.identities.each do |id| %>
      <li>
        <%= id.name %>
        <%= link_to 'Add more files', new_file_path(identity_id: id.id) %>
      </li>
<% end %>

<%= link_to 'Create File', new_bruse_file_path %>