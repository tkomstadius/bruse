<p id="notice"><%= notice %></p>


<table>
  <thead>
   <strong>Tag: <%= @tag.name %></strong>
    <tr>
      <th>File name</th>
      <th>File type</th>
      <th>Meta</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>  

  <tbody>  
    <p>
     
      <% @tag.bruse_files.each do |t| %>
        <tr> 
          <td><%= t.name %></td>
          <td><%= t.filetype %></td>
          <td><%= t.meta %></td>
        </tr> 
      <% end %>
    </p>
  </tbody>
</table>

