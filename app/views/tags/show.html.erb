<p id="notice"><%= notice %></p>


<table>
  <thead>
   <strong>Tag: <%= @tag.name %></strong>
    <tr>
      <th>File name</th>
      <th>File type</th>
      <th>Meta</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>  

  <tbody>  
    <p>
     
      <% @tag.bruse_files.each do |t| %>
        <tr> 
          <td><%= t.name %></td>
          <td><%= t.filetype %></td>
          <td><%= t.meta %></td>
        </tr> 
      <% end %>
    </p>
  </tbody>
</table>

<br>

<h1>Editing article</h1>
 
<%= form_for :tag, url: tag_path(@tag), method: :patch do |f| %>
 
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@tag.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @tag.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>

<%= link_to 'Back', bruse_files_path %>