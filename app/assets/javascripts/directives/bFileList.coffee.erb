@bruseApp.directive 'bFileList', ->
  return {
    controller: 'FileListCtrl'
    # link gets called when this directive is created
    link: (scope, element, attrs, FileListCtrl) ->
      # call the init function in FileListCtrl
      FileListCtrl.init(element, attrs)
    # only allow the directive to be created by using <b-file-list></b-file-list>
    restrict: 'E'
    templateUrl: '<%= asset_url "file_list.html" %>'
  }
